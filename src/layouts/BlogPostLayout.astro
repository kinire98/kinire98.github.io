---
import MenuLayout from "./MenuLayout.astro";
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<MenuLayout title={title}>
    <main>
        <article id="central">
            <slot />
        </article>
    </main>
</MenuLayout>

<style is:global>
    #central {
        min-width: 60vw;
        max-width: 75vw;
        padding: 100px;
        flex-direction: column;
        text-align: left;
    }
    #central h1 {
        font-size: 75px;
    }
    #central h2 {
        font-size: 60px;
    }
    #central h3 {
        font-size: 50px
    }
    #central h4 {
        font-size: 45px;
    }
    #central h5 {
        font-size: 40px
    }
    #central h6 {
        font-size: 30px;
    }
    #central p {
        font-size: 20px;
    }
    #central img {
        text-align: center;
        font-weight: 200;
    }
    #central pre {
        font-family: 'Courier New', Courier, monospace !important;
        font-weight: bold;
    }
    @media screen and (max-width: 1100px) {
       #central {
        max-width: 100%;
       } 
    }
    @media screen and (max-width: 650px) {
        #central {
            padding: 25px;
        } 
    }
</style>
