<style>
    #wrap {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: row;
    }
    #data-static {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        #logo {
            border-radius: 100%;
        }
        #city:hover {
            text-decoration: underline;
        }
