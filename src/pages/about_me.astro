---
import MenuLayout from "../layouts/MenuLayout.astro";
import LinkButtonAnim from "../components/LinkButtonAnim.astro";
---

<MenuLayout title="About me - kinire">
  <div id="data-static">
 		<img src="/tank.jpg" alt="Logo" id="logo" />
 		<h1>Iker Nieto Garrido</h1>
 		<h2 id="age"></h2>
 		<h3 id="city">Le√≥n, Spain</h3>
    <div>
      <LinkButtonAnim id="edex" content="Education and experience" path="./education-experience"/>
      <LinkButtonAnim id="skills" content="My skills" path="./skills"/>
      <LinkButtonAnim id="me" content="My story" path="./my-story"/>
    </div>
 		<img
 			src="/curri_icons/others/cv.svg"
 			alt="CV button"
 			id="cv"
 			class="links"
 		/>
    <h4>CV also available in <span id="cves">Spanish</span>!</small>
 	</div>
</MenuLayout>
<style>
	#wrap {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: row;
	}
	#data-static {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
    flex-wrap: wrap;
		#logo {
			border-radius: 50%;
		}
		#city:hover {
			text-decoration: underline;
		}
		.links {
			height: 45px;
			filter: drop-shadow(1px 1px 1px var(--black));
			transition: all 0.3s;
		}
		* {
			margin-block: 18px;
		}
		h1 {
			text-align: center;
      text-wrap: balance;
		}
		#cv:hover {
			filter: drop-shadow(0 0 5px var(--cont));
			cursor: pointer;
		}
    #cves {
      cursor: pointer;
      text-decoration: underline;
    }
    > div {
      display: flex;
      width: 1200px;
      align-items: center;
      justify-content: space-evenly;
      flex-direction: row;
    }
	}
  @media screen and (max-width: 1250px) {
    #data-static > div {
      flex-direction: column;
    } 
  }
  @media screen and (max-width: 415px) {
    #data-static {
      h1 {
        word-break: break-all;
      }
    }
  }
</style>
<style is:global>
  #data-static > div > button {
    width: 30% !important;
  }
	@media screen and (max-height: 500px) {
		body {
			overflow: visible;
		}
	}
  @media screen and (max-width: 415px) {
    #data-static > div > button {
      width: 25% !important;
    }
  }

</style>

<script>
  import openLink from "../helpers/openLink";
  import openPage from "../helpers/openPage";
	function timeDifference(date1: Date, date2: Date): number {
		var difference = date1.getTime() - date2.getTime();
		var daysDifference = Math.floor(difference / 1000 / 60 / 60 / 24);
		return Math.floor(daysDifference / 365);
	}
	document.getElementById("age")!.innerHTML = timeDifference(new Date(Date.now()), new Date("2005/04/05")) + " years";

	openLink(
		document.getElementById("city")!,
		"https://www.google.es/maps/@42.5988904,-5.5671356,3a,75y,10.49h,117.75t/data=!3m6!1e1!3m4!1sfSSR9xEwoRfYVPmFRAxS1A!2e0!7i13312!8i6656?entry=ttu"
	);
	/*openLink(
		document.getElementById("linkedin")!,
		"https://www.linkedin.com/in/iker-nieto-79985b232/"
	);
	openLink(document.getElementById("github")!, "https://github.com/kinire98");*/
	openLink(document.getElementById("cv")!, "/IkerNietoCV.pdf");
  openLink(document.getElementById("cves")!, "/IkerNietoCVES.pdf");
  openPage(document.getElementById("me")!, "/about_me/my-story");
  openPage(document.getElementById("edex")!, "/about_me/education-experience");
  openPage(document.getElementById("skills")!, "/about_me/skills");
</script>
