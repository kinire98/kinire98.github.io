            height: 45px
        }
        * {
            margin-block: 18px;
        }
    }
</style>


<script>
    import openLink from "../helpers/openLink";
    function timeDifference(date1: Date, date2: Date): number {
        var difference = date1.getTime() - date2.getTime();
        var daysDifference = Math.floor(difference/1000/60/60/24);
        return Math.floor(daysDifference/365);
    }

    const birthday = new Date("2005/04/05");
    const now = new Date(Date.now());
    const $dinAge = document.getElementById('age')!;
    $dinAge.innerHTML = timeDifference(now, birthday) + " years";
